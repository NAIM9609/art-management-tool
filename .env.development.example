# Development Environment Configuration
# This file contains example values for local development with LocalStack

# Application
PORT=8080
ENVIRONMENT=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=artuser
DB_PASSWORD=dbpass
DB_NAME=artmanagement
DB_SSLMODE=disable

# AWS Configuration (LocalStack)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566

# S3 Configuration
S3_BUCKET_NAME=art-images-dev
CDN_URL=http://localhost:4566/art-images-dev

# JWT Secret (development only - change in production!)
JWT_SECRET=dev-secret-change-in-production

# Payment Provider (use 'mock' for local testing)
PAYMENT_PROVIDER=mock

# Stripe (optional - for testing Stripe integration locally)
# STRIPE_API_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Etsy Integration (disabled in development)
ETSY_SYNC_ENABLED=false
ETSY_API_KEY=
ETSY_API_SECRET=
ETSY_SHOP_ID=
ETSY_SHOP_NAME=
ETSY_SHOP_URL=
ETSY_ACCESS_TOKEN=
ETSY_REDIRECT_URI=http://localhost:3000/admin/etsy-sync/callback

# Scheduler (disabled in development to avoid automated jobs)
SCHEDULER_ENABLED=false

# Rate Limiting (disabled in development)
RATE_LIMIT_ENABLED=false

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp,image/svg+xml,image/avif
UPLOAD_BASE_DIR=./uploads

# Tax Rate
TAX_RATE=0.0
