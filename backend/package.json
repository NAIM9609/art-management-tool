{
  "name": "art-management-backend",
  "version": "1.0.0",
  "description": "Art Management Tool Backend - TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "seed": "ts-node src/database/seed.ts",
    "build:lambda": "tsc && cd dist && zip -r lambda.zip . && mv lambda.zip ../",
    "build:lambda:win": "tsc && cd dist && powershell Compress-Archive -Path * -DestinationPath ../lambda.zip -Force",
    "deploy": "npm run build:lambda && cd ../infrastructure && terraform apply -auto-approve",
    "deploy:plan": "npm run build:lambda && cd ../infrastructure && terraform plan",
    "migrate:test": "DRY_RUN=true ts-node src/scripts/migrate-to-dynamodb.ts",
    "migrate:production": "ts-node src/scripts/migrate-to-dynamodb.ts"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.985.0",
    "@aws-sdk/lib-dynamodb": "^3.985.0",
    "@vendia/serverless-express": "^4.12.6",
    "aws-sdk": "^2.1693.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "stripe": "^14.21.0",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.30",
    "@types/uuid": "^9.0.8",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
